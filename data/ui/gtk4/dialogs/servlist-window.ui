<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <menu id="network_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Sort Networks</attribute>
        <attribute name="action">app.sort-networks</attribute>
      </item>
    </section>
  </menu>

  <object class="GtkWindow" id="servlist_window">
    <property name="default-width">900</property>
    <property name="default-height">680</property>
    <property name="child">
      <object class="AdwToolbarView" id="servlist_toolbar_view">
        <child type="top">
          <object class="AdwHeaderBar" id="servlist_header">
            <property name="title-widget">
              <object class="AdwWindowTitle" id="servlist_title">
                <property name="title" translatable="yes">Connect to Network</property>
              </object>
            </property>
            <child type="start">
              <object class="GtkButton" id="servlist_cancel_button">
                <property name="label" translatable="yes">_Cancel</property>
                <property name="use-underline">True</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="servlist_connect_button">
                <property name="label" translatable="yes">_Connect</property>
                <property name="use-underline">True</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="AdwNavigationSplitView" id="servlist_split_view">
            <property name="sidebar-width-fraction">0.35</property>
            <property name="min-sidebar-width">280</property>
            <property name="max-sidebar-width">400</property>
            <property name="sidebar">
              <object class="AdwNavigationPage" id="sidebar_page">
                <property name="title" translatable="yes">Networks</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">0</property>
                    <child>
                      <object class="GtkBox">
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkMenuButton">
                            <property name="icon-name">view-more-symbolic</property>
                            <property name="menu-model">network_menu</property>
                            <property name="tooltip-text" translatable="yes">Network Actions</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSearchBar" id="servlist_search_bar">
                        <property name="search-mode-enabled">True</property>
                        <property name="child">
                          <object class="GtkSearchEntry" id="servlist_networks_search_entry">
                            <property name="hexpand">True</property>
                            <property name="placeholder-text" translatable="yes">Search networks</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkScrolledWindow" id="servlist_networks_scroller">
                            <property name="hexpand">True</property>
                            <property name="vexpand">True</property>
                            <property name="hscrollbar-policy">never</property>
                            <property name="child">
                              <object class="GtkListBox" id="servlist_networks_list">
                                <property name="selection-mode">single</property>
                                <property name="activate-on-single-click">False</property>
                                <style>
                                  <class name="navigation-sidebar"/>
                                </style>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkActionBar">
                            <child type="start">
                              <object class="GtkBox">
                                <property name="spacing">6</property>
                                <child>
                                  <object class="GtkButton" id="servlist_add_button">
                                    <property name="icon-name">list-add-symbolic</property>
                                    <property name="tooltip-text" translatable="yes">Add Network</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton" id="servlist_remove_button">
                                    <property name="icon-name">list-remove-symbolic</property>
                                    <property name="tooltip-text" translatable="yes">Remove Network</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton" id="servlist_edit_button">
                                    <property name="icon-name">document-edit-symbolic</property>
                                    <property name="tooltip-text" translatable="yes">Edit Network</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child type="end">
                              <object class="GtkButton" id="servlist_favor_button">
                                <property name="icon-name">star-new-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Favorite Network</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <child>
                          <object class="GtkCheckButton" id="servlist_check_fav">
                            <property name="label" translatable="yes">Show favorites only</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
            <property name="content">
              <object class="AdwNavigationPage" id="content_page">
                <property name="title" translatable="yes">Settings</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="child">
                      <object class="AdwClamp">
                        <property name="maximum-size">600</property>
                        <property name="tightening-threshold">400</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">24</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">24</property>
                            <property name="margin-bottom">24</property>
                            <child>
                              <object class="AdwPreferencesGroup" id="user_info_group">
                                <property name="title" translatable="yes">User Information</property>
                                <property name="description" translatable="yes">Your default identity for IRC networks</property>
                                <child>
                                  <object class="AdwEntryRow" id="servlist_entry_nick1">
                                    <property name="title" translatable="yes">Nick name</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwEntryRow" id="servlist_entry_nick2">
                                    <property name="title" translatable="yes">Second choice</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwEntryRow" id="servlist_entry_nick3">
                                    <property name="title" translatable="yes">Third choice</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwEntryRow" id="servlist_entry_guser">
                                    <property name="title" translatable="yes">User name</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="AdwPreferencesGroup" id="startup_group">
                                <property name="title" translatable="yes">Startup</property>
                                <child>
                                  <object class="AdwSwitchRow" id="servlist_check_skip">
                                    <property name="title" translatable="yes">Skip network list on startup</property>
                                    <property name="subtitle" translatable="yes">Automatically connect to networks without showing this dialog</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </object>
</interface>
