<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>

  <object class="GtkWindow" id="ascii_window">
    <property name="default-width">760</property>
    <property name="default-height">500</property>
    <property name="child">
      <object class="GtkBox" id="ascii_root">
        <property name="orientation">vertical</property>
        <property name="spacing">8</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <child>
          <object class="GtkScrolledWindow" id="ascii_scroll">
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <property name="child">
              <object class="GtkGrid" id="ascii_grid">
                <property name="row-spacing">4</property>
                <property name="column-spacing">4</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="ascii_info_label">
            <property name="xalign">0</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="ascii_close_button">
            <property name="halign">end</property>
          </object>
        </child>
      </object>
    </property>
  </object>
</interface>
